<%= radio_button_tag 'toggle' , 'toggle', false, :onclick =>
	"toggleAll('domain_select');return false;"%>Toggle Domains
<% @domains.each do |domain| %>
    <br>
    <%= check_box_tag("domains[]", domain.superkingdom, true, :class=>'domain_select') %>
    <%= label_tag(domain.superkingdom, domain.superkingdom.capitalize) %>
<% end %>

<br>
<br>
Keep NAs in output?
<br>
<% ['yes', 'no'].each do |nas| %>
  <%= radio_button_tag(:nas, nas, nas == "yes") %>
  <%= label_tag("nas_#{nas}", nas.capitalize) %>
  <br>
<% end %>

<br>
Taxonomic Rank:
<% @ranks.each do |rank| %>
  <% if rank.rank_number < 8 %>
    <br>
    <%= radio_button_tag(:tax_id, rank.id, rank.rank == "phylum") %>
    <%= label_tag(:tax_domain, rank.rank.capitalize) %>
  <% end %>
<% end %>
