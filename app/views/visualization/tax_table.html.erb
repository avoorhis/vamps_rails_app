<h1>Tax Table</h1>

<%= render "debug" %>

<div  id='tax_table_div' >
<table class='standard_table'>

  <tr>
    <th></th>
    <th style='text-align:right;'>Projects:</th>    
    <% @choosen_projects_w_d.each do |project| %>
  	  <th style="text-align:center;" colspan="<%= project[:datasets].length %>"> <%= project[:pname] %> </th>   
    <% end %>
  </tr>
  <tr><td class='td-text-center'>n</td><th class='td-text-right' >Datasets:</th>
	<% @choosen_projects_w_d.each do |project| %>
	
		<% project[:datasets].each do |d| %>
		  <td class='td-text-center' > <%= d[:dataset] %> </td> 

		<% end %>
	<% end %>

    
    </tr>
	
  
    <% @taxonomy_by_site_hash.each do |taxon_string, data| %>
    <% data.each do |d|%>
    <tr>
      <td><%= taxon_string %></td>
      <td><%= d[1] %>
      </td>
    </tr>
    <tr>
      <td></td>
       <% dataset = @datasets_per_pr.select{|da| da.id == d[0]} %>
        <td><%= dataset[0].dataset%></td>
    </tr>
      <% end %>
    <% end %>
    

</table>	
</div>
